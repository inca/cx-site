<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info" >
    <appender-ref ref="STDOUT"/>
  </root>

  <logger name="ru.circumflex.site" level="debug"/>
  <logger name="ru.circumflex.core" level="info"/>
  <logger name="ru.circumflex.web" level="info"/>

</configuration>